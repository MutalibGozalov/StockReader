<Window x:Class="StockReader.WpfUI.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockReader.WpfUI"
        mc:Ignorable="d"
        Title="Settings" Height="316" Width="410">
    <Grid>
        <Label Content="Change input file directory" HorizontalAlignment="Center" Margin="0,53,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="inputDirectory" HorizontalAlignment="Center" Margin="0,170,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="390" Height="23" FontSize="16"/>
        <Button Content="Select.." HorizontalAlignment="Center" Margin="0,113,0,0" VerticalAlignment="Top" Height="37" Width="70" Click="SelectDirectory"/>

    </Grid>
</Window>
